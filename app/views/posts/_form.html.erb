<h1>New Posts</h1>
<%=form_for @post do |f|%>
    <p>
    <%=f.label "Title"%>
    <%=f.text_field :title%><br><br>

    <%=f.label "content"%>
    <%=f.text_field :content%><br><br>

    <%=f.collection_check_boxes :category_ids, Category.all, :id, :name%><br>
    </p>
    <%=f.fields_for :categories, post.categories.build do |cf|%>
        <%=cf.label :name, "Category"%>
        <%=cf.text_field :name%><br>
    <%end%>
    <br>
<%=f.submit%>
<%end%>
